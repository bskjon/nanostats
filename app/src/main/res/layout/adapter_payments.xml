<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/ETC_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/ETH_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:baselineAligned="false">
        <LinearLayout
            android:id="@+id/receivedValuta"
            android:background="@color/BCH_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginStart="8dp"
                android:text="@string/adapter_payments_ReceivedText"
                android:textSize="18sp"
                android:layout_marginEnd="12dp"
                android:layout_marginLeft="8dp" />
            <TextView
                android:id="@+id/adapter_paymentsCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text=""
                android:textSize="18sp"
                android:layout_marginEnd="4dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/receivedAmount"
            android:layout_weight="0.5"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/adapter_paymentsBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="0.0000000000000"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="###"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adapter_payments_ReceivedOn"
            android:layout_marginRight="12dp"
            />
        <TextView
            android:id="@+id/adapter_paymentsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.000.00"/>

    </LinearLayout>

</LinearLayout>